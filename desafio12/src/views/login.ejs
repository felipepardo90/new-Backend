<%- include("layout/main", {title: "Log In"}) %>

<body>
  <main>
    <form form action="/auth/login" method="post" class="login-form">
      <!-- Email input -->

      <div class="form-outline mb-4">
        <input type="email" id="form2Example1" name="email" />
        <label for="form2Example1">Email</label>
      </div>

      <!-- Password input -->

      <div class="form-outline mb-4">
        <input type="password" id="form2Example2" name="password" />
        <label for="form2Example2">Password</label>
      </div>

      <!-- Submit button -->

      <button type="submit" class="btn btn-primary btn-block mb-4">
        Sign in
      </button>

      <!-- Register buttons -->
      <div>
        <p>Not a member? <a href="/auth/signup">Register</a></p>
      </div>
    </form>
  </main>
</body>
</html>
