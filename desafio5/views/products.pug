extends layouts/layout


block main
    each i in products
        main
            div(class="card" style="width: 18rem;")
                img(src=i.thumbnail class="card-img-top" alt=i.title)
            div(class="card-body")
                h5(class="card-title")=i.title
                p(class="card-text")=i.price
                a(href="/api/products/" + i.id class="btn btn-primary") Ver producto
            

